class Solution {
    public int reachNumber(int target) {
        Queue<Integer> queue = new LinkedList<>();
        queue.add(0);
        int moves = 1;
        while (!queue.isEmpty()) {
            int size = queue.size();
            for (int i = 0; i < size; ++i) {
                int curr = queue.poll();
                if (target == curr) return moves - 1;
                queue.add(curr + moves);
                queue.add(curr - moves);
            }
            moves++;
        }        
        return moves;
    }    
}
